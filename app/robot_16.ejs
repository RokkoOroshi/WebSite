    <script>
        var cads = [];               
        
        $('.cad-load-buttion').click( function() {
            console.log($(this).closest("article").get(0));
            var id = $(this).closest("article").get(0).id;
            var n = "viewer" + id;
            $("#"+n).height(500);
            console.log(n);
            cads.push(new CadViewer(n, "images/robot/2015_" + id + ".obj"));
            this.disabled = true;
        });
        
        var animate = function() {
            requestAnimationFrame(animate);
            cads.forEach( function(cad) {
               cad.animate(); 
            });
        };
        animate();
    </script>
